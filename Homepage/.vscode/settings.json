{
    // ここから
    // エキスパートコースでの設定
    //
    // 一般設定
    //
    "editor.renderLineHighlight": "all", // 選択行を行番号含めすべてハイライト
    "editor.renderWhitespace": "boundary", // 空白文字を表示する
    "editor.tabSize": 2, // タブの大きさを空白2つ分に（言語別設定で上書き可能）
    "window.title": "${activeEditorMedium}${separator}${rootName}", // ファイル名を詳しく表示
    //
    // emmet 設定
    //
    "emmet.triggerExpansionOnTab": true, // tabキーで変換
    "emmet.variables": {
        "lang": "ja" // ! で展開されるテンプレートの lang を ja に
    },
    //
    // 言語別設定
    //
    "[html]": {
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    //
    // Linter 設定
    //
    "editor.codeActionsOnSave": { // ファイルを保存したときに、コードを ESlint で検証しエラーを修正する
        "source.fixAll.eslint": true
    },
    "vetur.validation.template": false, // Vetur によるコードチェックを行わない
    "eslint.validate": [ // ESLint によるコードチェックを、以下の言語について行う
        "html", "js", "vue"
    ],
    // ここまで
}